<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Table role -->
    <changeSet id="1.0.0-006-role" author="hiepnh">
        <createTable tableName="role">
            <column name="role_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <!-- Table permission -->
    <changeSet id="1.0.0-006-permission" author="hiepnh">
        <createTable tableName="permission">
            <column name="permission_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="permission_name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>

    <!-- Table user_role -->
    <changeSet id="1.0.0-006-user-role" author="hiepnh">
        <createTable tableName="user_role">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_role_user"
                             referencedTableName="users" referencedColumnNames="user_id"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_role_role"
                             referencedTableName="role" referencedColumnNames="role_id"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="user_role" columnNames="user_id, role_id" constraintName="pk_user_role"/>
    </changeSet>

    <!-- Table role_permission -->
    <changeSet id="1.0.0-006-role-permission" author="hiepnh">
        <createTable tableName="role_permission">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_role_permission_role"
                             referencedTableName="role" referencedColumnNames="role_id"/>
            </column>
            <column name="permission_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_role_permission_permission"
                             referencedTableName="permission" referencedColumnNames="permission_id"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="role_permission" columnNames="role_id, permission_id" constraintName="pk_role_permission"/>
    </changeSet>

</databaseChangeLog>