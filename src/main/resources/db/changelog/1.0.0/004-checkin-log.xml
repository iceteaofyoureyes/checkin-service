<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1.0.0-004-checkin-log" author="hiepnh" context="default">
        <createTable tableName="checkin_log">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_checkin_user"
                             referencedTableName="users" referencedColumnNames="user_id"/>
            </column>

            <column name="checkin_time" type="TIMESTAMPTZ" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>

            <column name="checkin_day" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="checkin_log" indexName="uk_checkin_user_day_utc" unique="true">
            <column name="user_id"/>
            <column name="checkin_day"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
